{
  "widget": {
    "id": "e5",
    "title": "Pull Requests Trend",
    "descripition": "Track all commits leading to the pull request and PR status over time.",
    "enable_components_compare": true,
    "components_compare_id": "pull-requests-trend-compare",
    "content": [
      {
        "header": [
          {
            "title": "Total pull requests",
            "description": "Count of all pull requests (PRs) ",
            "post_process_function_name": "pull requests",
            "spec_key": "totalPullRequestsHeaderSpec",
            "drill_down": {
              "report_id": "pullrequests",
              "report_title": "Pull requests"
            }
          }
        ],
        "section": [
          {
            "type": 3,
            "show_legends": true,
            "color_scheme": [
              {
                "color0": "#0A7146",
                "color1": "#00CC75"
              },
              {
                "color0": "#ECAA06",
                "color1": "#FFDB4C"
              },
              {
                "color0": "#A016C7",
                "color1": "#DA72FF"
              },
              {
                "color0": "#BC191D",
                "color1": "#FB6E72"
              }
            ],
            "light_color_scheme": [
              {
                "color0": "#0B9D60",
                "color1": "#7ACAA9"
              },
              {
                "color0": "#F0BE22",
                "color1": "#FCE465"
              },
              {
                "color0": "#B92FE0",
                "color1": "#CD97E0"
              },
              {
                "color0": "#F29492",
                "color1": "#E73B37"
              }
            ],
            "post_process_function_name": "pull requests",
            "spec_key": "pullRequestsChartSpec",
            "enable_post_transformation_processing": true,
            "drill_down": {
              "report_id": "pullrequests",
              "report_title": "Pull requests",
              "report_type": "status"
            }
          }
        ]
      }
    ]
  },
  "queries": {
    "totalPullRequestsHeader": {
      "alias": "pull_requests_review_data",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "range": {
                  "pr_created_time": {
                    "gte": "{{.startDate}}",
                    "lte": "{{.endDate}}",
                    "format": "yyyy-MM-dd HH:mm:ss",
                    "time_zone": "{{.timeZone}}"
                  }
                }
              },
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              }
            ]
          }
        },
        "aggs": {
          "by_repos": {
            "terms": {
              "field": "repository_name",
              "size": 10000
            },
            "aggs": {
              "pr_count": {
                "cardinality": {
                  "field": "pull_request_id"
                }
              }
            }
          },
          "sum_prs": {
            "sum_bucket": {
              "buckets_path": "by_repos>pr_count"
            }
          }
        }
      }
    },
    "pullRequestsChart": {
      "alias": "pull_requests_review_data",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "range": {
                  "pr_created_time": {
                    "gte": "{{.startDate}}",
                    "lte": "{{.endDate}}",
                    "format": "yyyy-MM-dd HH:mm:ss",
                    "time_zone": "{{.timeZone}}"
                  }
                }
              },
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              }
            ]
          }
        },
        "collapse": {
          "field": "pull_request_id",
          "inner_hits": {
            "name": "lates_status",
            "_source": false,
            "size": 1,
            "sort": [
              {
                "timestamp": "desc"
              }
            ]
          }
        },
        "aggs": {
          "date_counts": {
            "date_histogram": {
              "field": "pr_created_time",
              "calendar_interval": "{{.aggrBy}}",
              "min_doc_count": 0,
              "format": "yyyy-MM-dd",
              "time_zone": "{{.timeZone}}",
              "extended_bounds": {
                "min": "{{.dateHistogramMin}}",
                "max": "{{.dateHistogramMax}}"
              },
              "order": {
                "_key": "asc"
              }
            },
            "aggs": {
              "by_status": {
                "terms": {
                  "field": "review_status",
                  "size": 10
                },
                "aggs": {
                  "unique_pr_ids": {
                    "terms": {
                      "field": "pull_request_id",
                      "size": 1000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}