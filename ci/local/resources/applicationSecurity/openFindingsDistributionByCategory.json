  "queries": {
    "openFindingsDistributionByCategoryApplication": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "application_environment"
                }
              },
              {
                "term": {
                  "environment_id": "{{.targetEnv}}"
                }
              },
              {
                "terms": {
                  "remediation_status": [
                    "OPEN",
                    "IN_PROGRESS"
                  ]
                }
              },
              {
                "bool": {
                  "should": [
                    {
                      "term": {
                        "is_stale": false
                      }
                    },
                    {
                      "bool": {
                        "must_not": {
                          "exists": {
                            "field": "is_stale"
                          }
                        }
                      }
                    }
                  ],
                  "minimum_should_match": 1
                }
              }
            ]
          }
        },
        "aggs": {
          "category": {
            "terms": {
              "field": "category",
              "size": 100
            },
            "aggs": {
              "severity": {
                "terms": {
                  "field": "severity",
                  "size": 10
                },
                "aggs": {
                  "tracking_id": {
                    "terms": {
                      "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                      "size": 10000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
