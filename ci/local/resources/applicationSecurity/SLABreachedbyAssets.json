{
  "widget": {
    "id": "aso12",
    "title": "SLA Breached by Asset type",
    "description": "",
    "enable_components_compare": false,
    "components_compare_id": "sla-breached-by-asset-type-compare",
    "content": [
      {
        "section": [
          {
            "title": "SLA Breached by Asset type",
            "type": 10,
            "data_type": 0,
            "orientation": 0,
            "column_type": "sla-breached-by-asset-type",
            "show_legends": false,
            "color_scheme": null,
            "light_color_scheme": null,
            "post_process_function_name": "sla breached by asset",
            "spec_key": "slaBreachedByAssetSpec",
            "enable_post_transformation_processing": false,
            "drill_down": {}
          }
        ]
      }
    ]
  },
  "queries": {
    "slaBreachedByAssetTypeApplication": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "_source": false,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "application_environment"
                }
              },
              {
                "term": {
                  "environment_id": "{{.targetEnv}}"
                }
              },
              {
                "terms": {
                  "remediation_status": [
                    "OPEN",
                    "IN_PROGRESS"
                  ]
                }
              },
              {
                "range": {
                  "sla_breach_time": {
                    "lte": "now",
                    "time_zone": "{{.timeZone}}"
                  }
                }
              },
              {
                "bool": {
                  "should": [
                    {
                      "term": {
                        "is_stale": false
                      }
                    },
                    {
                      "bool": {
                        "must_not": {
                          "exists": {
                            "field": "is_stale"
                          }
                        }
                      }
                    }
                  ],
                  "minimum_should_match": 1
                }
              }
            ]
          }
        },
        "aggs": {
          "remediation_key": {
            "terms": {
              "field": "remediation_key",
              "size": 10
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                }
              }
            }
          }
        }
      }
    }
  }
}