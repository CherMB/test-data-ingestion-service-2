  "queries": {
    "slaBreachesBySeverity": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "range": {
                  "sla_breach_time": {
                    "lte": "now",
                    "time_zone": "Asia/Calcutta"
                  }
                }
              },
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "component_branch"
                }
              },
              {
                "terms": {
                  "remediation_status": ["OPEN", "IN_PROGRESS"]
                }
              }
            ],
            "must_not": {
              "terms": {
                "category": ["BUG", "CODE_SMELL", "HOTSPOT", "SECURITY_HOTSPOT"]
              }
            }
          }
        },
        "aggs": {
          "sla_breaches_by_severity": {
            "terms": {
              "field": "severity",
              "size": 10
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                },
                "aggs": {
                  "tool_id": {
                    "terms": {
                      "field": "tool_name",
                      "size": 1000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
