  "queries": {
    "riskAcceptedFalsePositiveFindingsCountApplication": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "application_environment"
                }
              },
              {
                "term": {
                  "environment_id": "{{.targetEnv}}"
                }
              },
              {
                "bool": {
                  "should": [
                    {
                      "term": {
                        "is_stale": false
                      }
                    },
                    {
                      "bool": {
                        "must_not": {
                          "exists": {
                            "field": "is_stale"
                          }
                        }
                      }
                    }
                  ],
                  "minimum_should_match": 1
                }
              }
            ]
          }
        },
        "aggs": {
          "remediation_status": {
            "terms": {
              "field": "remediation_status",
              "size": 10
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                }
              }
            }
          },
          "risk_accepted_counts": {
            "filter": {
              "term": {
                "remediation_status": "RISK_ACCEPTED"
              }
            },
            "aggs": {
              "RA_EXPIRING_IN_30_DAYS": {
                "filter": {
                  "bool": {
                    "must": [
                      {
                        "term": {
                          "triage_status": "RISK_ACCEPTED"
                        }
                      },
                      {
                        "range": {
                          "sla_breach_time": {
                            "lte": "now+30d/d"
                          }
                        }
                      }
                    ]
                  }
                }
              },
              "RA_EXPIRED": {
                "filter": {
                  "bool": {
                    "must": [
                      {
                        "term": {
                          "triage_status": "RISK_ACCEPTED"
                        }
                      },
                      {
                        "range": {
                          "sla_breach_time": {
                            "lt": "now/d"
                          }
                        }
                      }
                    ]
                  }
                }
              },
              "RA_NOT_EXPIRING_IN_30_DAYS": {
                "filter": {
                  "bool": {
                    "must": [
                      {
                        "term": {
                          "triage_status": "RISK_ACCEPTED"
                        }
                      },
                      {
                        "range": {
                          "sla_breach_time": {
                            "gt": "now+30d/d"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
