  "queries": {
    "findingsIdentifiedCountApplication": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "range": {
                  "first_identified_time": {
                    "gte": "{{.startDate}}",
                    "format": "yyyy-MM-dd",
                    "time_zone": "Asia/Calcutta"
                  }
                }
              },
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "application_environment"
                }
              },
              {
                "term": {
                  "environment_id": "{{.targetEnv}}"
                }
              },
              {
                "bool": {
                  "should": [
                    {
                      "term": {
                        "is_stale": false
                      }
                    },
                    {
                      "bool": {
                        "must_not": {
                          "exists": {
                            "field": "is_stale"
                          }
                        }
                      }
                    }
                  ],
                  "minimum_should_match": 1
                }
              }
            ]
          }
        },
        "aggs": {
          "remediation_status": {
            "terms": {
              "field": "remediation_status",
              "size": 10
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                }
              }
            }
          }
        }
      }
    }
  }
}