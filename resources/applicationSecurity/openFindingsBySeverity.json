{
  "widget": {
    "id": "aso2",
    "title": "Open findings by severity",
    "description": "",
    "enable_components_compare": false,
    "components_compare_id": "",
    "content": [
      {
        "header": [],
        "section": [
          {
            "type": 8,
            "show_legends": false,
            "color_scheme": [
              {
                "color0": "#FA6D71",
                "color1": "#D5252A"
              },
              {
                "color0": "#FCC16C",
                "color1": "#FF8307"
              },
              {
                "color0": "#FCFF89",
                "color1": "#FDC913"
              },
              {
                "color0": "#9FB6C1",
                "color1": "#648192"
              }
            ],
            "light_color_scheme": [
              {
                "color0": "#FFB4B2",
                "color1": "#EF322E"
              },
              {
                "color0": "#FF8205",
                "color1": "#FFDBA6"
              },
              {
                "color0": "#FEC513",
                "color1": "#FFED89"
              },
              {
                "color0": "#759AB1",
                "color1": "#B2CEE0"
              }
            ],
            "data_type": 0,
            "orientation": 1,
            "category_type": "singleWithMultiColor",
            "post_process_function_name": "open findings by severity",
            "spec_key": "openFindingsBySeveritySpec",
            "enable_post_transformation_processing": true,
            "drill_down": null
          }
        ]
      }
    ]
  },
  "queries": {
    "openFindingsBySeverityApplication": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "application_environment"
                }
              },
              {
                "term": {
                  "environment_id": "{{.targetEnv}}"
                }
              },
              {
                "terms": {
                  "remediation_status": [
                    "OPEN",
                    "IN_PROGRESS"
                  ]
                }
              },
              {
                "bool": {
                  "should": [
                    {
                      "term": {
                        "is_stale": false
                      }
                    },
                    {
                      "bool": {
                        "must_not": {
                          "exists": {
                            "field": "is_stale"
                          }
                        }
                      }
                    }
                  ],
                  "minimum_should_match": 1
                }
              }
            ]
          }
        },
        "aggs": {
          "open_findings_by_severity": {
            "terms": {
              "field": "severity",
              "size": 20
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                },
                "aggs": {
                  "tool_id": {
                    "terms": {
                      "field": "tool_name",
                      "size": 1000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}