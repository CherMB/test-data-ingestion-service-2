{
  "widget": {
    "id": "so11",
    "title": "SLA Breached by Asset type",
    "description": "",
    "enable_components_compare": false,
    "components_compare_id": "sla-breached-by-asset-type-compare",
    "content": [
      {
        "section": [
          {
            "title": "SLA Breached by Asset type",
            "type": 10,
            "data_type": 0,
            "orientation": 0,
            "column_type": "sla-breached-by-asset-type",
            "show_legends": false,
            "color_scheme": null,
            "light_color_scheme": null,
            "post_process_function_name": "sla breached by asset",
            "spec_key": "slaBreachedByAssetSpec",
            "enable_post_transformation_processing": false,
            "drill_down": {}
          }
        ]
      }
    ]
  },
  "queries": {
    "slaBreachedByAssetType": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "_source": false,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "component_branch"
                }
              },
              {
                "terms": {
                  "remediation_status": ["OPEN", "IN_PROGRESS"]
                }
              },
              {
                "range": {
                  "sla_breach_time": {
                    "lte": "now",
                    "time_zone": "{{.timeZone}}"
                  }
                }
              }
            ],
            "must_not": {
              "terms": {
                "category": ["BUG", "CODE_SMELL", "HOTSPOT", "SECURITY_HOTSPOT"]
              }
            }
          }
        },
        "aggs": {
          "remediation_key": {
            "terms": {
              "field": "remediation_key",
              "size": 10
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                }
              }
            }
          }
        }
      }
    }
  }
}
