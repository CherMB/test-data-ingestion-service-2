              },
              {
                "color0": "#759AB1",
                "color1": "#B2CEE0"
              }
            ],
            "data_type": 0,
            "orientation": 1,
            "category_type": "singleWithMultiColor",
            "post_process_function_name": "open findings by severity",
            "spec_key": "openFindingsBySeveritySpec",
            "enable_post_transformation_processing": true,
            "drill_down": {
              "report_id": "redirect-url",
              "redirection_info": [
                {
                  "id": "Very high",
                  "url": "severities=VERY_HIGH&remediationStatus=OPEN+IN_PROGRESS&triageStatus=ALL"
                },
                {
                  "id": "High",
                  "url": "severities=HIGH&remediationStatus=OPEN+IN_PROGRESS&triageStatus=ALL"
                },
                {
                  "id": "Medium",
                  "url": "severities=MEDIUM&remediationStatus=OPEN+IN_PROGRESS&triageStatus=ALL"
                },
                {
                  "id": "Low",
                  "url": "severities=LOW&remediationStatus=OPEN+IN_PROGRESS&triageStatus=ALL"
                }
              ]
            }
          }
        ]
      }
    ]
  },
  "queries": {
    "openFindingsBySeverity": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "component_branch"
                }
              },
              {
                "terms": {
                  "remediation_status": ["OPEN", "IN_PROGRESS"]
                }
              }
            ],
            "must_not": {
              "terms": {
                "category": ["BUG", "CODE_SMELL", "HOTSPOT", "SECURITY_HOTSPOT"]
              }
            }
          }
        },
        "aggs": {
          "open_findings_by_severity": {
            "terms": {
              "field": "severity",
              "size": 20
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                },
                "aggs": {
                  "tool_id": {
                    "terms": {
                      "field": "tool_name",
                      "size": 1000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
