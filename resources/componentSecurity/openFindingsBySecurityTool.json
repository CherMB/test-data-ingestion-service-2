{
  "widget": {
    "id": "so8",
    "title": "Open findings by security tool",
    "description": "",
    "enable_components_compare": false,
    "pagination": false,
    "components_compare_id": "open-findings-by-security-tool-compare",
    "content": [
      {
        "header": [],
        "section": [
          {
            "type": 10,
            "data_type": 0,
            "orientation": 0,
            "column_type": "open-findings-by-security-tool",
            "show_legends": false,
            "color_scheme": null,
            "light_color_scheme": null,
            "post_process_function_name": "open findings by security tool",
            "spec_key": "openFindingsBySecurityToolSpec",
            "enable_post_transformation_processing": false,
            "drill_down": {}
          }
        ],
        "footer": []
      }
    ]
  },
  "queries": {
    "openFindingsBySecurityTool": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "component_branch"
                }
              },
              {
                "terms": {
                  "remediation_status": ["OPEN", "IN_PROGRESS"]
                }
              }
            ],
            "must_not": {
              "terms": {
                "category": ["BUG", "CODE_SMELL", "HOTSPOT", "SECURITY_HOTSPOT"]
              }
            }
          }
        },
        "aggs": {
          "tool_name": {
            "terms": {
              "field": "tool_display_name",
              "size": 10
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                },
                "aggs": {
                  "tool_id": {
                    "terms": {
                      "field": "tool_id",
                      "size": 1000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
