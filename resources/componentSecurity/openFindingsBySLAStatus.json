  "queries": {
    "openFindingsBySLAStatus": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "component_branch"
                }
              },
              {
                "terms": {
                  "remediation_status": ["OPEN", "IN_PROGRESS"]
                }
              }
            ],
            "must_not": {
              "terms": {
                "category": ["BUG", "CODE_SMELL", "HOTSPOT", "SECURITY_HOTSPOT"]
              }
            }
          }
        },
        "aggs": {
          "open_findings_by_sla_status": {
            "filters": {
              "filters": {
                "sla_breached": {
                  "range": {
                    "sla_breach_time": {
                      "lte": "now"
                    }
                  }
                },
                "non_sla_breached": {
                  "range": {
                    "sla_breach_time": {
                      "gt": "now"
                    }
                  }
                }
              }
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                }
              }
            }
          }
        }
      }
    }
  }
}
