  "queries": {
    "openFindingsByReviewStatus": {
      "alias": "cb_security_findings",
      "query": {
        "size": 0,
        "query": {
          "bool": {
            "filter": [
              {
                "term": {
                  "org_id": "{{.orgId}}"
                }
              },
              {
                "term": {
                  "profile_group_type": "component_branch"
                }
              }
            ],
            "must_not": {
              "terms": {
                "category": ["BUG", "CODE_SMELL", "HOTSPOT", "SECURITY_HOTSPOT"]
              }
            }
          }
        },
        "aggs": {
          "triage_status": {
            "terms": {
              "field": "triage_status",
              "size": 20
            },
            "aggs": {
              "tracking_id": {
                "terms": {
                  "script": "doc['finding_code'].value + '_' + doc['tracking_id'].value",
                  "size": 10000
                }
              }
            }
          }
        }
      }
    }
  }
